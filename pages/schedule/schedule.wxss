/* pages/schedule/schedule.wxss */

/* 日历组件 */
.calendar-view {
	width: 100%;
	height: 100%;
	padding: 5px 0 2px;
	background-color: #fff;
	border-radius: 8px;
}

.date-item {
	position: relative;
	width: 90%;
	margin-left: 5%;
	margin-bottom: 14px;
	display: flex;
}

.date-item view.normal {
	width: 100%;
	font-size: 3vw;
	margin-right: 15px;
	background-color: #fff;
	border-radius: 8px;
}

.date-item view.normal:last-child {
	margin-right: 0;
}

.date-item view.active {
	background-color: #0F8CFF;
	color: #fff;
}

.normal view.day {
	margin-top: 4px;
	text-align: center;
	font-size: 4vw;
	font-weight: bold;
}

.normal view.week {
	text-align: center;
	margin-top: 10px;
	margin-bottom: 6px;
	font-size: 3.5vw;
	font-weight: normal;
}

.normal view.point {
	margin-left: 40%;
	margin-top: 10px;
	margin-bottom: -10px;
}

.normal view.point::after {
	content: '';
	display: flex;
	height: 6px;
	width: 6px;
	border-radius: 50%;
	background-color: #0F8CFF;
}

/* Daily */
.page-view view.text {
	position: relative;
	margin-top: 15px;
	color: #000;
	font-weight: bold;
	font-size: 6vw;
	left: 5px;
}

/* 任务清单组件 */
.page-view {
	padding: 5px 10px 5px;
	text-align: left;
	background-color: transparent;
}

.page-view label.item {
	margin: 10px 0;
	background-color: #fff;
	/* 组件圆角 */
	border-radius: 8px;
	overflow: hidden;
}

.item-name {
	position: relative;
	margin-top: -5px;
	margin-right: 10px;
}

.item-time {
	position: relative;
	margin-right: 10px;
	margin-bottom: -5px;
	color: #656A72;
}

/* 选择框 */
checkbox .wx-checkbox-input {
	position: absolute;
	right: 12px;
	width: 50rpx;
	height: 50rpx;
	border: 1px;
	border-radius: 6px;
	background-color: #D6D9DB;
}

/* 选择框颜色 */
checkbox .wx-checkbox-input.wx-checkbox-input-checked {
	border-color: #0F8CFF;
	background-color: #0F8CFF;
}

/* 选择框内对号 */
checkbox .wx-checkbox-input.wx-checkbox-input-checked::before {
	font-size: 20px;
	color: #fff;
}

/* 任务清单组件布局 */
.weui-cell::before {
	border-top: 0px;
}