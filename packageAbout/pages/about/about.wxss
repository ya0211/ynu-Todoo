/* packageAbout/pages/about/about.wxss */

/* 页面布局 */
.page {
  padding: 12px 15px 20px;
}

/* 项目组件 */
.kind-list-item {
  margin: 10px 0;
  background-color: var(--weui-BG-2);
  border-radius: 8px;
  overflow: hidden;
}
.kind-list-item:first-child {
  margin-top: 0;
}
.kind-list-text {
  padding: 0 15px 0;
  flex: 1;
}
.kind-list-icon {
  width: 30px;
  height: 30px;
}
.kind-list-item-hd {
  padding: 15px;
  display: flex;
  align-items: center;
  transition: opacity .3s;
}
.kind-list-item-hd-show {
  opacity: .2;
}
.kind-list-item-bd {
  height: 0;
  overflow: hidden;
}
.kind-list-item-bd-show {
  height: auto;
  border: 1px solid var(--weui-FG-3);
  border-width: 1px;
  border-style: solid;
  border-radius: 8px;
}
.kind-list-item-icon {
  padding: 5px 0px 5px;
  width: 25px;
  height: 25px;
}

/* 项目拓展组件 */
.navigator-box {
  opacity: 0;
  position: relative;
  background-color: var(--weui-BG-2);
  line-height: 1.41176471;
  transform: translateY(-50%);
  transition: .3s;
}
.navigator-box-show {
  opacity: 1;
  transform: translateY(0);
}
.navigator {
  padding: 10px 15px;
  position: relative;
  display: flex;
  align-items: center;
}
.navigator:first-child::before {
  display: none;
}
.navigator-text {
  padding: 6px 10px 6px;
  font-size: 15px;
  text-align: left;
}

/* 项目组件布局 */
.weui-cell::before {
  right: 0px;
  left: 0px;
}
